<h1>Input</h1>
<br>

<p>
	<strong>New Task</strong>
	<form action="/new" method="post">
		<input type="text" name="new_task">
		<input type="submit">
	</form>
</p>
<br>

<p>
	<strong>Current Tasks:</strong>
	<p>	
		<% @all_tasks = CSV.read("tasks.csv") %>
		<% @count = 0 %>
		<% while @count < @all_tasks.size do %>
			<%= @count + 1 %>.
			<%= @all_tasks[@count] %>
			<% @count += 1 %>
			<br>
		<% end %>
	</p>
</p>

