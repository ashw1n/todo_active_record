<h1>Output</h1>

<strong>New Task: </strong>
<%= @new_task = params[:new_task] %>
<br><br>

<% CSV.open("tasks.csv", "wb") do |@all_tasks| %>
	<% @all_tasks << ["#{@new_task}"] %>
<% @all_tasks.close %>


<p>
	<strong>All Tasks:</strong><br>
	<% @all_tasks = CSV.read("tasks.csv") %>
	<% @count = 0 %>
	<% while @count < @all_tasks.size do %>
		<%= @count + 1 %>.
		<%= @all_tasks[@count] %>
		<% @count += 1 %>
		<br>
	<% end %>
	
</p>

<p>
	<a href="/">Home</a>
	<br>
	<a href="/all">All</a>
	<br>
	<a href="/new">New</a>
	<br>
	<a href="/complete">Complete</a>
</p>